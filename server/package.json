{
  "name": "@jads-dev/jasb-server",
  "description": "JASB Server.",
  "version": "1.0.0",
  "main": "src/ts/index.ts",
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js | bunyan -o short",
    "preinspect": "npm run build",
    "inspect": "node --inspect-brk dist/index.js | bunyan -o short",
    "dev": "nodemon --exec \"npm run start\"",
    "debug": "nodemon --exec \"npm run inspect\"",
    "pregenerate-secret": "npm run build",
    "generate-secret": "node dist/tools/generate-secret.js",
    "docker": "USER_ID=$(id -u ${USER}) GROUP_ID=$(id -g ${USER}) docker compose -f ../develop-compose.yaml run --tty --rm --entrypoint /bin/ash server",
    "docker:build": "USER_ID=$(id -u ${USER}) GROUP_ID=$(id -g ${USER}) docker compose -f ../develop-compose.yaml run --rm server run build",
    "docker:dev": "USER_ID=$(id -u ${USER}) GROUP_ID=$(id -g ${USER}) docker compose -f ../develop-compose.yaml up --build --no-log-prefix server"
  },
  "dependencies": {
    "@js-joda/core": "^5.2.0",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "axios": "^0.27.2",
    "discord-oauth2": "^2.6.0",
    "discord.js": "^13.1.0",
    "fp-ts": "^2.10.5",
    "http-status-codes": "^2.1.4",
    "io-ts": "^2.2.16",
    "io-ts-reporters": "^2.0.1",
    "jose": "^4.8.1",
    "json5": "^2.2.0",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-helmet": "^6.1.0",
    "postgres-interval": "^4.0.0",
    "postgres-migrations": "^5.2.0",
    "slonik": "^28.1.0",
    "source-map-support": "^0.5.20"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bunyan-logger": "^2.1.4",
    "@types/pg": "^8.6.1",
    "@types/source-map-support": "^0.5.3",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.4"
  },
  "nodemonConfig": {
    "ext": "ts,js,json,json5",
    "ignore": [
      "dist"
    ]
  },
  "optionalDependencies": {
    "oci-sdk": "^2.3.1"
  }
}
